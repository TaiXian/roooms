mixin serName()
  p You are user: #{userName}
  div
    form(action='/signup',method='post')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='newUserName') newUserName
          input(id='newUserName',type='text',value='',placeholder='@',name='newUserName')
      div(data-role='fieldcontain')
        input(type='submit',value='Send',data-transition='fade', data-theme='c')
